encryption = "gpg"
progress = true
color = "on"

[diff]
    command = "nvim"
    args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]

[merge]
    command = "nvim"
    args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}"]

[edit]
    apply = true

[gpg]
    command = "gpg"
    recipient = "Matias Ceau <matias@ceau.net>"
    args = ["--quiet"]
