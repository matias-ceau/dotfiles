source_if_found() {
    while read -r filepath ; do
        [[ -f "$filepath" ]] && . "${filepath}"
    done
    }

source_if_found <<EOF
"$XDG_DATA_HOME/cargo/env"
"$XDG_CONFIG_HOME/broot/launcher/bash/br"
EOF

PATH="$(printf %s "$PATH:$LOCALBIN:$LOCALOPT/bin:$CARGO_HOME/bin" |
    awk -vRS=: '!a[$0]++' |
    paste -s -d:)"
export PATH

