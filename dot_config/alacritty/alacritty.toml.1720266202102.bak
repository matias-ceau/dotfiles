# Alacritty Configuration File
# For more information see https://github.com/alacritty/alacritty

# Window settings
[window]
padding = { x = 0, y = 0 }
decorations = 'None'
opacity = 1
blur = false

# Font configuration
[font]
normal = { family = "Iosevka Nerd Font", style = "Regular" }
bold = { family = "Iosevka Nerd Font", style = "Bold" }
italic = { family = "Iosevka Nerd Font", style = "Italic" }
size = 18

# Colors
[colors]
primary = { background = '#000000', foreground = '#cccccc' }
cursor = { text = '#000000', cursor = '#ffffff' }
transparent_background_colors = true

